file = {:home/apfitzge/research/papers/organized/Schunert et al. - 2017 - A flexible nonlinear diffusion acceleration method for the SN transport equations discretized with discontinuou.pdf:pdf},
issn = {10902716},
journal = {Journal of Computational Physics},
keywords = {Discontinuous finite element method,Neutron transport equation,Nonlinear diffusion acceleration},
pages = {107--136},
