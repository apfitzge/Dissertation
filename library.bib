file = {:home/apfitzge/research/papers/organized/Zhu et al. - 2016 - An optimally diffusive Coarse Mesh Finite Difference method to accelerate neutron transport calculations.pdf:pdf},
issn = {18732100},
journal = {Annals of Nuclear Energy},
keywords = {CMFD,Fourier analysis,Neutron transport,odCMFD,pCMFD},
pages = {116--124},
