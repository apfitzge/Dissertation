journal = {Annals of Nuclear Energy},
number = {2},
pages = {125--152},
title = {{ANEMONA - a neutron transport code for general geometry reactor assemblies based on the method of characteristics and R-function solid modeler}},
volume = {28},
year = {2001}
}
