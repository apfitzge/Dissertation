}
@article{Mohanakrishnan1981,
abstract = {It has been recognized recently that accurate numerical solutions of the neutron transport equation in two dimensions can be obtained by interface current approach provided the angular dependence of these currents is properly accounted for. When this method is applied to the analysis of two-dimensional lattice unit cells found in thermal reactors it has the potential of providing the neutron distribution in such assemblies at lesser computing cost than other popular neutron transport theory methods like SN method and first flight collision probability method. Developments in the field of interface current approach to neutron transport are reviewed in the paper. Considering PN half-space expansion of angular currents at region interfaces and using the weighted residual (Bubnov-Galerkin) method, the interface current equations are formulated. Making use of the superposition principle of neutron currents, the approach to the solution of the system of equations so generated is indicated. Connections and differences with the response matrix method, where the currents at interfaces are similarly expanded, are explained. {\textcopyright} 1981.},
author = {Mohanakrishnan, P.},
